{
  "name": "vending-machine-registration-system",
  "version": "1.0.0",
  "description": "Vending machine device registration system",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "setup": "powershell -ExecutionPolicy Bypass -File scripts/setup.ps1",
    "setup:bash": "bash scripts/setup.sh",
    "dev:all": "powershell -ExecutionPolicy Bypass -File scripts/start-dev.ps1",
    "dev:all:bash": "bash scripts/start-dev.sh",
    "db:create": "node scripts/create-dynamodb-table.js create",
    "db:delete": "node scripts/create-dynamodb-table.js delete",
    "docker:build": "docker build -t vending-machine-backend .",
    "docker:run": "docker run -p 3000:3000 vending-machine-backend",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.9.2",
    "aws-sdk": "^2.1400.0",
    "uuid": "^9.0.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/joi": "^17.2.3",
    "@types/uuid": "^9.0.2",
    "@types/node": "^20.4.2",
    "typescript": "^5.1.6",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.6.1",
    "@types/jest": "^29.5.3",
    "ts-jest": "^29.1.1",
    "eslint": "^8.45.0",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0"
  }
}